{
  "name": "nesquirk",
  "version": "0.1.1",
  "description": "Ties Nes + minimongo together for gloryful reactive apps.",
  "main": "lib/server/index.js",
  "browser": "lib/client/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:server": "BABEL_ENV=server babel src/server --out-dir lib/server",
    "build:client": "BABEL_ENV=client babel src/client --out-dir lib/client",
    "watch": "run-p watch:*",
    "watch:server": "npm run build:server -- --watch",
    "watch:client": "npm run build:client -- --watch",
    "test": "standard && tape test/*.test.js",
    "clean": "rm -rf lib/**"
  },
  "keywords": [
    "minimongo",
    "mingo",
    "nes",
    "hapi",
    "hapijs",
    "websockets",
    "reactive",
    "react"
  ],
  "author": "Alan Shaw",
  "license": "MIT",
  "dependencies": {
    "bson-objectid": "^1.1.5",
    "ejson": "^2.1.2",
    "events": "^1.1.1",
    "hoist-non-react-statics": "^2.2.1",
    "mingo": "^1.3.0",
    "nes": "^6.4.3",
    "prop-types": "^15.5.10",
    "react": "^15.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "npm-run-all": "^4.0.2",
    "standard": "^10.0.2",
    "tape": "^4.7.0"
  },
  "standard": {
    "ignore": [
      "lib"
    ],
    "parser": "babel-eslint"
  },
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanshaw/nesquirk.git"
  },
  "bugs": {
    "url": "https://github.com/alanshaw/nesquirk/issues"
  },
  "homepage": "https://github.com/alanshaw/nesquirk#readme"
}
